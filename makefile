#######################################################################################
# CONFIGURATION
#######################################################################################


GPP=g++ -Wall -std=c++20 
GSL_LIBS=-lgsl -lgslcblas -lm

EXE=./main.exe
SRC=$(wildcard *.cpp)
OBJ=$(SRC:.cpp=.o)

#######################################################################################

all: ${EXE} 

#######################################################################################	

# Compilation

# Des classes
%.o:%.cpp %.h
	${GPP} -c -o $@ $<

# Des programmes principaux
%.o:%.cpp
	${GPP} -c -o $@ $<

#######################################################################################

# Linking
${EXE}: ${OBJ}
	${GPP} -o $@ ${OBJ} ${GSL_LIBS}

#######################################################################################

clean:
	rm -rf *.o ${EXE} auto_*.dat
